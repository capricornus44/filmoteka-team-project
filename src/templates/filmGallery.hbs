<ul class="list list-galery">
  {{#each this}}

  <li class="card" data-id={{id}} data-title={{original_title}} data-poster={{poster_path}} data-genres={{genres}} data-date={{release_date}} data-rating={{vote_average}}>
    <div class="image-box">
      <img src='https://image.tmdb.org/t/p/w500/{{poster_path}}' alt="image" class="card-picture" />
    </div>
    <h2 class="card-title">{{original_title}}</h2>
    <div class="description-box">
      <span>{{genres}}</span>
      <span class="release_date">{{release_date}}</span>
      <span class="rating">{{vote_average}}</span>
    </div>
  </li>
  {{/each}}
</ul>
